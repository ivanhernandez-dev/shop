<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="tv.codely.inventory.category.domain.Category" table="categories">
        <composite-id name="id" class="tv.codely.inventory.shared.domain.CategoryId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="name" class="tv.codely.inventory.category.domain.CategoryName" access="field">
            <property name="value" column="name" type="string" access="field"/>
        </component>
    </class>
</hibernate-mapping>
