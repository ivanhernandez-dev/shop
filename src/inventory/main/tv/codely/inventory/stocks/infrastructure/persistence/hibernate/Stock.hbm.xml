<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="tv.codely.inventory.stocks.domain.Stock" table="stocks">
        <composite-id name="shelfId" class="tv.codely.inventory.shared.domain.ShelfId" access="field">
            <key-property column="shelf_id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="quantity" class="tv.codely.inventory.stocks.domain.StockQuantity" access="field">
            <property name="value" column="quantity" type="integer" access="field"/>
        </component>

        <component name="productId" class="tv.codely.inventory.shared.domain.ProductId" access="field">
            <property column="product_id" name="value" length="36" access="field"/>
        </component>
    </class>
</hibernate-mapping>
