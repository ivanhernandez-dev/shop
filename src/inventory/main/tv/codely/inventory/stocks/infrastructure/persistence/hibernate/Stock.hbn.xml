<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="tv.codely.inventory.stocks.domain.Stock" table="stocks">
        <composite-id>
            <key-many-to-one name="product" class="tv.codely.inventory.products.domain.Product" column="product_id"
                             access="field"/>
            <key-many-to-one name="shelf" class="tv.codely.inventory.shelves.domain.Shelf" column="shelf_id"
                             access="field"/>
        </composite-id>
        <component name="amount" class="tv.codely.inventory.stocks.domain.StockAmount" access="field">
            <property name="value" column="name" type="integer" access="field"/>
        </component>
    </class>
</hibernate-mapping>
