<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="dev.ivanhernandez.mooc.steps.domain.Step" table="steps">
        <composite-id name="id" class="dev.ivanhernandez.mooc.steps.domain.StepId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="title" class="dev.ivanhernandez.mooc.steps.domain.StepTitle" access="field">
            <property name="value" column="title" type="string" access="field"/>
        </component>

        <joined-subclass name="dev.ivanhernandez.mooc.steps.domain.challenge.ChallengeStep" table="steps_challenges">
            <key column="id"/>

            <component name="statement" class="dev.ivanhernandez.mooc.steps.domain.challenge.ChallengeStepStatement"
                       access="field">
                <property name="value" column="statement" type="string" access="field"/>
            </component>
        </joined-subclass>

        <joined-subclass name="dev.ivanhernandez.mooc.steps.domain.video.VideoStep" table="steps_videos">
            <key column="id"/>

            <component name="videoUrl" class="dev.ivanhernandez.shared.domain.VideoUrl" access="field">
                <property name="value" column="url" type="string" access="field"/>
            </component>

            <component name="text" class="dev.ivanhernandez.mooc.steps.domain.video.VideoStepText" access="field">
                <property name="value" column="text" type="string" access="field"/>
            </component>
        </joined-subclass>
    </class>
</hibernate-mapping>
